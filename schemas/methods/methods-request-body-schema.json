{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schemas/methods/methods-request-body-schema.json",
  "title": "methods-request-body",
  "type": "object",
  "properties": {
    "method": {
      "description": "The fetching method",
      "type": "string"
    },
    "requestAll" : {
      "description": "Whether to return all methods",
      "type": "boolean"
    }
  },

  "required" : ["requestAll"],
  "if": {
    "properties": {
      "requestAll": { "const": false }
    }
  },
  "then": {
    "required": ["method"]
  }
}


