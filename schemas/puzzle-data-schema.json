{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schemas/puzzle-data-schema.json",
  "title": "puzzle-data",
  "type": "object",
  "properties": {
    "meta" : {
      "type": "object",
      "properties": {
        "plugin": {
          "type": "string"
        },
        "pluginVersion": {
          "type": "string"
        },
        "fetchDate": {
          "type": "string"
        }
      }
    },
    "columns" : {
      "type": "number"
    },
    "rows": {
      "type": "number"
    },
    "clues": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        },
        "i": {
          "type": "number"
        },
        "direction": {
          "type": "string",
          "enum": ["Across","Down"]
        },
        "prompt": {
          "type": "string"
        },
        "answer": {
          "type": "string"
        }
      }
    },
    "title": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "releaseData": {
      "type": "string"
    }
  }
}

