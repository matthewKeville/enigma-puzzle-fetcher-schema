{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schemas/request-schema.json",
  "title": "request",
  "type": "object",
  "properties": {
    "body" : {
      "anyOf" : [
        { "$ref" : "fetch/fetch-request-body-schema.json" },
        { "$ref" : "methods/methods-request-body-schema.json" }
      ]
    },
    "requestType" : {
      "type" : "string",
      "enum" : [ "fetch", "methods" ]
    }
  },
  "required" : [ "body", "requestType" ]
  
}


